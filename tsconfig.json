{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noEmitOnError": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
