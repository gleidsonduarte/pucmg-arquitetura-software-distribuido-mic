{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noEmitOnError": false,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
      "node_modules",
      "__mocks__",
      "__tests__",
      "coverage",
      "docs"
  ]
}
